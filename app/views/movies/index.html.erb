<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>View Movies</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rating</th>
      <th>Description</th>
      <th>Release Date</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.description %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to "Show this movie", movie %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr> 
      <td colspan="3"> <%= link_to "New movie", new_movie_path %> </td>
    </tr>
  </tfoot>
</table>
